@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to TriviaR!";
}

<div class="ui grid">
    <div class="eight wide column">
        <div class="segment" id="intro">
            Let's give everyone a moment to hop into the game, and then give a moment to pick a question.
        </div>
    </div>
    <div class="eight wide column">
        <div class="ui statistics">
            <div class="red statistic">
                <div class="value" id="currentPlayers">
                0
                </div>
                <div class="label">
                Players
                </div>
            </div>
        </div>
    </div>
</div>

<div id="questionTemplate" style="display: none">
    <div class="ui header" id="questionHeader" data-id="{{id}}">{{text}}</div>
    <div class="ui list">
    {{#answers}}
    <div class="item" id="answerList">
        <input type="radio" name="answer" value="{{this}}"/>
        <label>{{this}}</label>
    </div>
    {{/answers}}
    </div>
</div>

<div class="ui modal" id="incorrectDialog">
    <div class="header">
        Result:
    </div>
    <div class="content">
        <div class="ui red inverted segment">Incorrect!</div>
    </div>
    <div class="actions">
        <div class="ui negative button">
        Dang!
        </div>
    </div>
</div>

<div class="ui modal" id="correctDialog">
    <div class="header">
        Result:
    </div>
    <div class="content">
        <div class="ui green inverted segment">Correct!</div>
    </div>
    <div class="actions">
        <div class="ui positive button">
        Cool!
        </div>
    </div>
</div>

<div class="ui modal" id="questionDialog">
  <div class="header">
    Next Question
  </div>
  <div class="content">
    <div class="description" id="questionContainer">
    </div>
  </div>
  <div class="actions">
    <div class="ui positive right labeled icon button" onclick="logAnswer();">
      OK
      <i class="checkmark icon"></i>
    </div>
  </div>
</div>

<script src="~/scripts/signalr.js"></script>
<script src="~/scripts/triviar.js"></script>
<script src="~/scripts/triviar-player.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.min.js"></script>